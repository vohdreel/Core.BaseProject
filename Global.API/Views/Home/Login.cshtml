@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

@if (ViewBag.IsSuccess == false)
{
    <div class="container w-600px">
        <div style="padding-top: 15px;"></div>

        <div class="text-center alert alert-danger">
            <button type="button" class="close" data-dismiss="alert">×</button>
            <h3 id="msgRetorno" style="padding-top: 10px">Ops, algo deu errado :(</h3>
            <div style="padding-top: 20px"><li>Email ou senha invalido</li></div>
        </div>
    </div>
}

@if (ViewData.ModelState.ErrorCount > 0)
{
    <div class="container w-600px">
        <div style="padding-top: 15px;"></div>

        <div class="text-center alert alert-danger">
            <button type="button" class="close" data-dismiss="alert">×</button>
            <h3 id="msgRetorno" style="padding-top: 10px">Ops, algo deu errado :(</h3>
            <div style="padding-top: 20px" asp-validation-summary="ModelOnly"></div>
        </div>
    </div>
}

<div class="d-flex flex-column-fluid flex-center mt-30 mt-lg-0">

    <div class="form-group w-350px">

        <h1>@ViewData["Title"]</h1>
        <hr />
        <div class="row">
            <div class="col-md-12">
                <form asp-action="Login">

                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control w-350px" placeholder="email@email.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-control w-350px" placeholder="senha" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <!--

                    <div class="form-group" style="vertical-align: middle">
                        <input type="checkbox" name="ManterConectado" checked />
                        <label class="font-size-h7 font-weight-bolder">Manter conectado</label>
                    </div>

                    -->

                    <div class="form-group d-flex flex-wrap justify-content-end align-items-center">
                        <a asp-action="ForgotPassword" class="mr-40">Esqueceu a senha?</a>
                        <input type="submit" value="Entrar" class="btn btn-primary mr-5" />
                    </div>

                </form>
            </div>
        </div>

    </div>

</div>





