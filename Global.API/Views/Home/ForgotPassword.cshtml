@model ForgotPasswordViewModel

@{
    ViewData["Title"] = "Esqueci minha senha";
}

        
@if (ViewData.ModelState.ErrorCount > 0)
{
    <div class="container w-600px">
        <div style="padding-top: 15px;"></div>

        <div class="alert alert-danger">
            <button type="button" class="close" data-dismiss="alert">×</button>
            <h3 id="msgRetorno" style="padding-top: 20px" class="text-center">Ops! Algo deu errado :(</h3>
            <div style="padding-top: 20px" asp-validation-summary="ModelOnly"></div>
        </div>
    </div>
}


<div class="container">

    <h2>@ViewData["Title"]</h2>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <form asp-action="ForgotPassword">
                
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control w-350px" placeholder="email@email.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Enviar</button>
            </form>
        </div>
    </div>

</div>
