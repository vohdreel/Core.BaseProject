@model Global.API.Models.ChangePasswordViewModel

@{
    ViewData["Title"] = "Alterar senha";
}



@if (ViewBag.IsSuccess == true)
{
    <div class="container w-600px" id="msg_box">
        <div style="padding-top: 15px"></div>

        <div class="text-center alert alert-success">
            <button type="button" class="close" data-dismiss="alert">×</button>
            <h3 id="msgRetorno" style="padding-top: 10px" class="text-center">Senha alterada com sucesso! :)</h3>
        </div>
    </div>
}

@if (ViewData.ModelState.ErrorCount > 0)
{
    <div class="container w-600px">
        <div style="padding-top: 15px;"></div>

        <div class="alert alert-danger">
            <button type="button" class="close" data-dismiss="alert">×</button>
            <h3 id="msgRetorno" style="padding-top: 10px" class="text-center">Ops! Algo deu errado :(</h3>
            <div style="padding-top: 20px" asp-validation-summary="ModelOnly"></div>
        </div>
    </div>
}




<div class="d-flex flex-column-fluid flex-center mt-30 mt-lg-0">
        
    <div class="form-group w-350px">
               

        <h1>Alterar Senha</h1>
        <hr />

        <form asp-action="ChangePassword" onsubmit="BlockPage();">

            <div class="form-group">
                <label asp-for="CurrentPassword" class="control-label"></label>
                <input asp-for="CurrentPassword" class="form-control" />
                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPassword" class="control-label"></label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmNewPassword" class="control-label"></label>
                <input asp-for="ConfirmNewPassword" class="form-control" />
                <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Alterar" class="btn btn-primary" />
                <a class="btn btn-secondary" href="javascript:history.back()">Voltar</a>
            </div>
        </form>


    </div>
</div>